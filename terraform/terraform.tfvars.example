## Example tfvars file for the Juice Shop CloudFront/WAF deployment.

# Primary region
region           = "us-east-2"

# CIDR for your workstation/IP to allow SSH access (22/tcp)
my_ip_cidr       = "X.X.X.X/32"

# Name of an existing EC2 key pair for SSH access
key_name         = "my-keypair"

# Globally unique S3 bucket name to store CloudFront logs
logs_bucket_name = "addison-juice-logs-123456"

## Optional network overrides.  Uncomment to pin resources to an existing VPC/subnet
# vpc_id    = "vpc-xxxxxxxx"
# subnet_id = "subnet-xxxxxxxx"

## New variables introduced by the security improvements

# Email address subscribed to SNS alerts
alert_email      = "you@example.com"

# Pin Juice Shop Docker image to a specific version/digest
juice_shop_image = "bkimminich/juice-shop:15.0.0"